            <div class="menu">
            <a  href="/clients/dashboard">Agendamentos</a>
            <a href="/logout">Sair</a>
            </div>
           {{else}}
          <div class="menu">
             <a href="/login">Login</a>
             <a href="/register">Registrar</a>
     </div>
           {{/if}}
</header>
    <div class="container">
        <!-- Mensagens -->
        {{#if messages.message}}

       <div class="message">
         {{messages.message}}
       </div>

        {{/if}}
        {{{ body }}}
    </div>
  <footer>
        <p><span>Barbearia Elite</span> &copy; 2023</p>
    </footer>
    
</body>
</html>